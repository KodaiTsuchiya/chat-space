%body
  %div.container
    = render partial: 'shared/side_bar'
    %div.main
      %div.main__header
        %div.main__header__groupname__edit
          Edit
          / = link_to 'Edit', edit_group_path()
        %div.main__header__groupname
          = @group.name
        %ul
          %li Member：
          - @group.users.each do |user|
            %li
              = user.name + "　"
      %div.main__messageroom
        %ul
          = render @messages
      %div.main__inputarea
        = form_for [@group, @message] do |f|
          = f.text_field :body, class: 'main__inputarea__message', placeholder: 'type a message'
          = f.label :image do
            %i.fa.fa-picture-o.fa-lg
            = f.file_field :image, class: 'main__inputarea__image'
          = f.submit 'Send', class: 'main__inputarea__submit'
